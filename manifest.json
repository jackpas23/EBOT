{
  "manifest_version": 2,
  "name": "BBOT Scan",
  "version": "1.4",
  "description": "A simple BBOT scanner extension.",
  "permissions": ["nativeMessaging", "history", "file:///*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bbot.png",
      "48": "icons/bbot.png",
      "128": "icons/bbot.png"
    }
  },
  "icons": {
    "16": "icons/bbot.png",
    "48": "icons/bbot.png",
    "128": "icons/bbot.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bbot-scan@example.org"
    }
  }
}
