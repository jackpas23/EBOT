{
  "manifest_version": 2,
  "name": "BBOT Scan",
  "version": "1.0",
  "description": "A simple BBOT scanner extension.",
  "permissions": ["nativeMessaging", "history", "file:///*"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bbot-scan@example.org"
    }
  }
}
